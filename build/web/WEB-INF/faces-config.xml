<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    
    <managed-bean>
        <managed-bean-name>Paciente</managed-bean-name>
        <managed-bean-class>ctrl.PacienteBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>        
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>Exame</managed-bean-name>
        <managed-bean-class>ctrl.ExameBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>        
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>Medico</managed-bean-name>
        <managed-bean-class>ctrl.MedicoBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>        
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>Agenda</managed-bean-name>
        <managed-bean-class>ctrl.AgendaBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>        
    </managed-bean>
    
    
    <navigation-rule>
        <from-view-id>Paciente/listar_pacientes.jsp</from-view-id>
        <navigation-case>
            <from-outcome>paciente</from-outcome>
            <to-view-id>Paciente/alterar_paciente.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>notpaciente</from-outcome>
            <to-view-id>listar_pacientes.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>Paciente/cadastrar_paciente.jsp</from-view-id>
        <navigation-case>
            <from-outcome>listarPac</from-outcome>
            <to-view-id>Paciente/listar_pacientes.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    
    
    
    <navigation-rule>
        <from-view-id>Exame/listar_exames.jsp</from-view-id>
        <navigation-case>
            <from-outcome>exames</from-outcome>
            <to-view-id>Exame/alterar_exame.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>notexames</from-outcome>
            <to-view-id>listar_exames.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>Exame/cadastrar_exame.jsp</from-view-id>
        <navigation-case>
            <from-outcome>listarExe</from-outcome>
            <to-view-id>Exame/listar_exames.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    
    
    <navigation-rule>
        <from-view-id>Medico/listar_medicos.jsp</from-view-id>
        <navigation-case>
            <from-outcome>medico</from-outcome>
            <to-view-id>Medico/alterar_medico.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>notmedico</from-outcome>
            <to-view-id>listar_medicos.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>Medico/cadastrar_medico.jsp</from-view-id>
        <navigation-case>
            <from-outcome>listarMed</from-outcome>
            <to-view-id>Medico/listar_medicos.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    
    
    <navigation-rule>
        <from-view-id>Agenda/listar_agendamentos.jsp</from-view-id>
        <navigation-case>
            <from-outcome>agenda</from-outcome>
            <to-view-id>Agenda/alterar_agendamento.jsp</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>notagenda</from-outcome>
            <to-view-id>listar_agendamentos.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>Agenda/cadastrar_agendamento.jsp</from-view-id>
        <navigation-case>
            <from-outcome>listarAge</from-outcome>
            <to-view-id>Agenda/listar_agendamentos.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
